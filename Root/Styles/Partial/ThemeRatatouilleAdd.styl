.footer
	position relative

.main-nav::before
.main-nav::after
.footer::before
  content ''
  display block
  position absolute
  top .2em
  width 100%
  border-bottom .1em dashed #aaa

.main-nav::after
  top 2.2em

.footer::before
  left 0

