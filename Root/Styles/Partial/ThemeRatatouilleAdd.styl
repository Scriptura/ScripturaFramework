:root .main-nav *
    color #fff

@media (min-width: $sizeNav)
  .main-nav li:nth-child(4n+1) > *
    background-color $colorAdd001
  .main-nav li:nth-child(4n+2) > *
    background-color $colorAdd002
  .main-nav li:nth-child(4n+3) > *
    background-color $colorAdd003
  .main-nav li:nth-child(4n+4) > *
    background-color $colorAdd004
  .main-nav li:nth-child(4n+1) .active::after
    background-color $colorAdd001
  .main-nav li:nth-child(4n+2) .active::after
    background-color $colorAdd002
  .main-nav li:nth-child(4n+3) .active::after
    background-color $colorAdd003
  .main-nav li:nth-child(4n+4) .active::after
    background-color $colorAdd004

