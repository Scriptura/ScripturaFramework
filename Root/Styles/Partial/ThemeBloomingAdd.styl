[class*="ribbon-container"][class*="box"]
  background-image none

.box0 h2
.box0 p
  //margin 1em 1rem // @note em units pour le height en fonction de la taille de la font, rem units pour la largeur
  margin-left 1rem
  margin-right 1rem
  padding-bottom .5rem

.box0 .magimg
  width 100% // @note Si petites images
  padding-bottom 50%
  background-color #333
  background-size cover
  background-position 50% 50%
  border-radius $r1 $r1 0 0
  transition all 1s

a:focus .magimg
a:hover .magimg
a:active .magimg
  background-position 0% 0%
  
.no-picture
  background #333 url(../../Images/Default.jpg)

.progress:nth-child(4n+1) div
  background-color $colorAdd001

.progress:nth-child(4n+2) div
  background-color $colorAdd002

.progress:nth-child(4n+3) div
