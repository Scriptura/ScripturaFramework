[class*="box"]
  position relative
  background $colorBG002
  background-image linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.5))
  ifBorderRadius($r1)
  box-shadow 0 0 2em rgba(0, 0, 0, .1)

.box
  padding 1em

[class*="box"]::before
[class*="box"]::after
  content ''
  z-index -1
  position absolute
  bottom 2em
  left 1em
  width 80%
  height 1.5em
  max-width 30em
  box-shadow 0 1.5em 2em rgba(0, 0, 0, .4)
  transform rotate(-3deg) translateZ(0)

[class*="box"]::after
  right 1em
  left auto
  transform rotate(3deg)

