// -----------------------------------------------------------------------------
// @title       Print
// @description Feuille de style dédiée à l'impression
// -----------------------------------------------------------------------------

body > :not(main)
article header
.button-group
.scroll-top
.no-print
form
label
input
button
  display none !important

* // @note Cache certains effets éventuels sur les boites et le texte
  text-shadow none !important
  box-shadow none !important
  background transparent !important

body
  margin 2cm // @bugfix @affected Safari @note Déclaration '@page' non reconnue par Safari, des marges sont donc définies sur le body
  font-family 'Open Sans', Arial, sans-serif
  font-weight 300
  line-height 20px
  font-size 14px
  color #666
  text-align justify

a
  color #000
  text-decoration none

.links a[href]::after
  content ' (' attr(href) ')' // @note Afficher l'URL

.links a[href^="#"]::after
  content '' // @note Pas d'affichage pour ce type d'URL

p
h2
h3
blockquote
  orphans 3 // @note Nombre de lignes minimum pour qu'un paragaphe soit conservé en bas de la page
  widows 3  // @note Nombre de lignes minimum pour qu'une fin de paragaphe soit imprimée en haut de la page

blockquote
ul
ol
  page-break-inside avoid // @note No breaks inside these elements

h2, .h2
h3, .h3
h4, .h4
h5, .h5
h6, .h6
  page-break-after avoid // @note Évite un saut de page après l'élément

h1
  line-height 3
  text-align left

h1, .h1
  margin-top 16px
  margin-bottom 10px
  font-size 32px

h2, .h2
  margin-top 14px
  margin-bottom 8px
  font-size 28px

h3, .h3
  margin-top 12px
  margin-bottom 6px
  font-size 24px

h4, .h4
  margin-top 10px
  margin-bottom 4px
  font-size 20px

h5, .h5
  margin-top 8px
  margin-bottom 4px
  font-size 18px

h6, .h6
  margin-top 6px
  margin-bottom 4px
  font-size 16px

blockquote
  margin 0 0 20px
  padding 0 0 0 15px
  border-left 5px solid #aaa

[class*="message"]
  padding 10px 20px
  margin-bottom 10px
  border 1px dashed #aaa
  border-radius 5px

[class*="map"]
  min-height 300px